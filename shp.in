AS_INIT
# vim: set filetype=sh :

atexit ()
{
  AS_IF([test -d "$tmp"], [rm -rf "$tmp"])
}
trap atexit EXIT 
trap 'trap - EXIT; atexit; AS_EXIT(1)' INT PIPE TERM

AS_TMPDIR(shp)
prog="$tmp/prog.tcl"

if (dirname /) >/dev/null 2>&1 && test "X`dirname / 2>&1`" = "X/"; then
  mydir="`dirname $as_myself`/"
else
  mydir=""
fi

"${mydir}shpc" "$@" > "$prog"
shift
"${mydir}shprun.tcl" "$prog" "$@"
